@model RestApp.Web.Models.Banks.BankModel
@{
    ViewBag.Title = T("View.Bank.Edit");
}
<div>
    <a href="@Url.Action("Index")" class="btn btn-inverse btn-mini"><i class="icon-arrow-left icon-white">
    </i>@T("View.Common.BackToList").Text</a>
</div>
@using (Html.BeginForm("Edit", "Bank", FormMethod.Post, new { @class = "form-horizontal" }))
{
    
    <div class="well">
        <legend>@T("View.Bank.Edit.Edit"): <b>@Model.Name</b></legend>
        @Html.ValidationSummary(true)
        @Html.Partial("_CreateOrEditBank", Model)
    </div>
}
<div>
    <a href="@Url.Action("Index")" class="btn btn-inverse btn-mini"><i class="icon-arrow-left icon-white">
    </i>@T("View.Common.BackToList").Text</a>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
