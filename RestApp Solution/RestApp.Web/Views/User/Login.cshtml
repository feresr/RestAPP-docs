@model RestApp.Web.Models.Users.LoginModel
@{
    ViewBag.Title = T("View.User.Login.Login").Text;
    Layout = "~/Views/Shared/_LayoutForLogin.cshtml";
}

    @using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
    {
        <h2 class="form-signin-heading">Please sign in</h2>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-error" })

        
        @Html.TextBoxFor(m => m.LoginName, new { @class = "form-control", @placeholder = "User Name", autofocus="", required="" })

        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", required="" })                

        
        <label class="checkbox">
            @Html.CheckBoxFor(m => m.RememberMe)
            Remember me
        </label>
        
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style type="text/css">
    body {
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #eee;
}

.form-signin {
  max-width: 330px;
  padding: 15px;
  margin: 0 auto;
}
.form-signin .form-signin-heading,
.form-signin .checkbox {
  margin-bottom: 10px;
}
.form-signin .checkbox {
  font-weight: normal;
}
.form-signin .form-control {
  position: relative;
  height: auto;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
  padding: 10px;
  font-size: 16px;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.form-signin input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
</style>